---
interface Props {
  title?: string;
  tagline?: string;
  description?: string;
  ctaText?: string;
  backgroundImages?: string[];
  backgroundImageDuration?: number;
}
const {
  title = "DON FRANCO",
  tagline = "PARRILLA ARTESANAL",
  description = "Cocina de autor en un ambiente único. Conocé nuestro menú y reservá tu mesa.",
  ctaText = "VER MENÚ",
  backgroundImages = [],
  backgroundImageDuration = 5,
} = Astro.props;
const hasCarousel = backgroundImages.length > 0;
const totalDuration = hasCarousel ? backgroundImages.length * backgroundImageDuration : 0;
const visibleEndPercent = hasCarousel ? 100 / backgroundImages.length : 0;
const fadeOutPercent = Math.min(visibleEndPercent + 3, 100);
---
<section id="hero" class="hero" style={hasCarousel ? `--hero-duration: ${totalDuration}s; --hero-delay-step: ${backgroundImageDuration}s;` : undefined}>
  {hasCarousel ? (
    <div class="hero-bg" aria-hidden="true">
      <div class="hero-bg-slides">
        {backgroundImages.map((url, i) => (
          <img
            src={url}
            alt=""
            class="hero-bg-slide"
            style={`animation-delay: ${i * backgroundImageDuration}s;`}
            referrerpolicy="no-referrer"
          />
        ))}
      </div>
      <div class="hero-overlay" />
    </div>
  ) : null}
  <div class="container hero-inner">
    <h1 class="hero-title">{title}</h1>
    <p class="hero-tagline">{tagline}</p>
    <p class="hero-desc">{description}</p>
    <a href="#" class="cta-primary" data-open-menu-viewer>{ctaText}</a>
  </div>
</section>

{hasCarousel ? (
  <style is:global set:html={`@keyframes hero-bg-fade{0%{opacity:1}${Math.max(0, visibleEndPercent - 2)}%{opacity:1}${fadeOutPercent}%{opacity:0}100%{opacity:0}}`} />
) : null}

<style>
  .hero {
    position: relative;
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    background: var(--color-surface);
    overflow: hidden;
  }
  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
    width: 100%;
    height: 100%;
  }
  .hero-bg-slides {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }
  .hero-bg-slide {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    opacity: 0;
    animation: hero-bg-fade var(--hero-duration, 15s) ease-in-out infinite;
    pointer-events: none;
  }
  .hero-overlay {
    position: absolute;
    inset: 0;
    background: rgba(15, 15, 15, 0.65);
    pointer-events: none;
  }
  .hero-inner {
    position: relative;
    z-index: 1;
    padding-block: var(--space-12);
  }
  .hero-title {
    font-family: var(--font-title);
    font-size: clamp(2.5rem, 8vw, 4.5rem);
    letter-spacing: 0.05em;
    color: var(--color-text);
    margin-bottom: var(--space-2);
  }
  .hero-tagline {
    font-family: var(--font-title);
    font-size: clamp(1rem, 3vw, 1.5rem);
    color: var(--color-accent);
    letter-spacing: 0.1em;
    margin-bottom: var(--space-6);
  }
  .hero-desc {
    font-size: 1.1rem;
    color: var(--color-muted);
    max-width: 32rem;
    margin-inline: auto;
    margin-bottom: var(--space-6);
  }
  .cta-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-3) var(--space-8);
    min-height: var(--touch-target-min);
    box-sizing: border-box;
    background: transparent;
    color: var(--color-text);
    border: 2px solid var(--color-accent);
    border-radius: 4px;
    font-family: var(--font-title);
    font-size: 1.25rem;
    letter-spacing: 0.05em;
    transition: background 0.2s, color 0.2s;
  }
  .cta-primary:hover {
    background: var(--color-accent);
    color: var(--color-bg);
    text-decoration: none;
  }
  .cta-primary:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 4px;
  }
  @media (max-width: 768px) {
    .hero {
      min-height: 50vh;
      height: 50vh;
    }
    .hero-bg {
      height: 100%;
      min-height: 100%;
    }
    .hero-bg-slides {
      height: 100%;
      min-height: 100%;
    }
    .hero-bg-slide {
      height: 100%;
      min-height: 100%;
      width: 100%;
    }
    .hero-inner {
      padding-block: var(--space-8);
    }
    .cta-primary {
      width: 100%;
      max-width: 20rem;
      margin-inline: auto;
    }
  }
</style>
